{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2021", "DOM"],
    "types": ["node", "@vercel/node"],
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src", "api"],
  "exclude": ["node_modules", "dist"]
}

